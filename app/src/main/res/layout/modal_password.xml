<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300sp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        app:passwordToggleEnabled="true"
        android:backgroundTint="@color/colorAccent"
        app:passwordToggleTint="@color/colorAccentDark"
        android:layout_margin="10sp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/modal_password"
            android:hint="New Password"
            android:ems="14"
            android:drawablePadding="5sp"
            android:drawableStart="@drawable/password_vect"
            android:backgroundTint="@color/colorAccentDark"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        app:passwordToggleEnabled="true"
        android:backgroundTint="@color/colorAccent"
        app:passwordToggleTint="@color/colorAccentDark"
        android:layout_margin="10sp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/modal_own_password"
            android:hint="Your Own Password"
            android:ems="14"
            android:drawablePadding="5sp"
            android:drawableStart="@drawable/password_vect"
            android:backgroundTint="@color/colorAccentDark"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/modal_btn"
        android:layout_margin="20sp"
        android:background="@color/colorAccent"
        android:text="Reset Password"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:textColor="#ffffff" />
</LinearLayout>